{
  "name": "poke-battle",
  "version": "1.0.0",
  "description": "Combined client and server for your game",
  "main": "server/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server/server.js",
    "start-client": "node client/client.js",
    "dev-server": "nodemon server/server.js",
    "dev-client": "nodemon client/client.js",
    "dev": "concurrently \"npm run dev-server\" \"npm run dev-client\"",
    "test": "echo \"Error: no tests specified\" && exit 1"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "concurrently": "^6.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}